{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "DOM"],
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "tslib": ["node_modules/tslib/tslib.d.ts"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["**/node_modules", "**/dist"]
}
