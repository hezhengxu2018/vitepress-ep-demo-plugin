{
  "name": "vitepress-better-demo-plugin",
  "type": "module",
  "version": "0.0.0",
  "description": "A vitepress plugin to preview component and display code",
  "author": "hezhengxu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:hezhengxu2018/vitepress-ep-demo-plugin.git"
  },
  "keywords": [
    "vitepress",
    "plugin",
    "code",
    "demo",
    "block",
    "preview",
    "component",
    "element-plus"
  ],
  "exports": {
    ".": {
      "types": "./dist/markdown/index.d.ts",
      "import": "./dist/markdown/index.js"
    },
    "./theme/*": {
      "import": "./dist/theme/*/index.js"
    },
    "./theme/*/style": {
      "import": "./dist/theme/*/style.css"
    }
  },
  "types": "./dist/markdown/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev:theme": "vite build -c ./vite.theme.config.ts --watch",
    "dev:plugin": "vite build -c ./vite.plugin.config.ts --watch",
    "build": "pnpm build:plugin && pnpm build:theme",
    "build:plugin": "vite build -c ./vite.plugin.config.ts",
    "build:theme": "vite build -c ./vite.theme.config.ts",
    "release": "pnpm build && vr release --skip-changelog"
  },
  "peerDependencies": {
    "element-plus": "^2.2.0",
    "vitepress": "*",
    "vue": "^3.2.0"
  },
  "peerDependenciesMeta": {
    "element-plus": {
      "optional": true
    }
  },
  "dependencies": {
    "@stackblitz/sdk": "^1.11.0",
    "codesandbox": "2.2.3"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.0",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-container": "^2",
    "@types/node": "^20.4.2",
    "@vitejs/plugin-vue": "^6",
    "unplugin-dts": "*",
    "unplugin-vue": "^7.0.5",
    "vite": "7.2.2",
    "vite-plugin-lib-inject-css": "^2",
    "vue-tsc": "^3.1.3"
  }
}
